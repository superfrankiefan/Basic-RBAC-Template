<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sff.rbacdemo.biz.mapper.TaskMapper">
    <select id="getCaseTotalHours" resultType="java.lang.Float">
        SELECT
            SUM(bt.WORK_HOURS)
        FROM
            b_task bt
        WHERE
            bt.CASE_CODE = #{caseCode}
    </select>
</mapper>