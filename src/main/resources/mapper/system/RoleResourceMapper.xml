<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sff.rbacdemo.system.mapper.RoleResourceMapper">
    <delete id="deleteByRoleCode" parameterType="java.lang.String">
        delete from t_role_resource where ROLE_CODE = #{roleCode}
    </delete>
    <delete id="deleteByResourceId" parameterType="java.lang.Long">
        delete from t_role_resource where RESOURCE_ID = #{resourceId}
    </delete>
    <select id="getResourceIds" parameterType="java.lang.String" resultType="java.lang.String">
        select RESOURCE_ID from t_role_resource where ROLE_CODE = #{roleCode}
    </select>
</mapper>